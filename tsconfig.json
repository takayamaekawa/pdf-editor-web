{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2022", "WebWorker", "DOM"],
		"module": "ES2022",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"declaration": false,
		"sourceMap": false,
		"noEmit": true,
		"isolatedModules": true,
		"types": ["@cloudflare/workers-types"]
	},
	"include": ["src/**/*", "*.ts", "*.js"],
	"exclude": ["node_modules", "dist"]
}
